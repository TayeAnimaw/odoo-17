<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_patient_report_tree" model="ir.ui.view">
            <field name="name">hospital.patient.report.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree string="Patient Report">
                    <field name="patient_id"/>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="phone"/>
                    <field name="blood_type"/>
                </tree>
            </field>
        </record>

        <record id="action_patient_report" model="ir.actions.act_window">
            <field name="name">Patient Report</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_patient_report_tree"/>
        </record>
    </data>
</odoo>