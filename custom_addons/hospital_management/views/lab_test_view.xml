<odoo>
    <!-- Action -->
    <record id="hospital_management.lab_test_action" model="ir.actions.act_window">
        <field name="name">Lab Tests</field>
        <field name="res_model">hospital.lab_test</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View -->
    <record id="hospital_management.view_lab_test_tree" model="ir.ui.view">
        <field name="name">hospital.lab_test.tree</field>
        <field name="model">hospital.lab_test</field>
        <field name="arch" type="xml">
            <tree string="Lab Tests">
                <field name="medical_record_id"/>
                <field name="test_name"/>
                <field name="test_date"/>
                <field name="status"/>
                <field name="result"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="hospital_management.view_lab_test_form" model="ir.ui.view">
        <field name="name">hospital.lab_test.form</field>
        <field name="model">hospital.lab_test</field>
        <field name="arch" type="xml">
            <form string="Lab Test">
                <sheet>
                    <group>
                        <field name="medical_record_id"/>
                        <field name="test_name"/>
                        <field name="test_date"/>
                        <field name="normal_range"/>
                        <field name="result"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>