<odoo>
    <!-- Tree View -->
    <record id="hospital_management.view_invoice_tree" model="ir.ui.view">
        <field name="name">hospital.invoice.tree</field>
        <field name="model">hospital.invoice</field>
        <field name="arch" type="xml">
            <tree string="Invoices">
                <field name="patient_id"/>
                <field name="invoice_date"/>
                <field name="total_amount"/>
                <field name="paid_amount"/>
                <field name="balance"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="hospital_management.view_invoice_form" model="ir.ui.view">
        <field name="name">hospital.invoice.form</field>
        <field name="model">hospital.invoice</field>
        <field name="arch" type="xml">
            <form string="Invoice">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="invoice_date"/>
                        <field name="total_amount"/>
                        <field name="paid_amount"/>
                        <field name="balance"/>
                        <field name="status"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="hospital_management.invoice_action" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">hospital.invoice</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>