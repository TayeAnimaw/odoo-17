<odoo>
    <!-- Action -->
    <record id="hospital_management.prescription_action" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">hospital.prescription</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View -->
    <record id="hospital_management.view_prescription_tree" model="ir.ui.view">
        <field name="name">hospital.prescription.tree</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <tree string="Prescriptions">
                <field name="medical_record_id"/>
                <field name="medication"/>
                <field name="dosage"/>
                <field name="frequency"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="hospital_management.view_prescription_form" model="ir.ui.view">
        <field name="name">hospital.prescription.form</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <sheet>
                    <group>
                        <field name="medical_record_id"/>
                        <field name="medication"/>
                        <field name="dosage"/>
                        <field name="frequency"/>
                        <field name="duration"/>
                        <field name="instructions"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>