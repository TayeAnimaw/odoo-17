<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="location_action" model="ir.actions.act_window">
            <field name="name">Locations</field>
            <field name="res_model">hospital.location</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="view_location_tree" model="ir.ui.view">
            <field name="name">hospital.location.tree</field>
            <field name="model">hospital.location</field>
            <field name="arch" type="xml">
                <tree string="Locations">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>
        <record id="view_location_form" model="ir.ui.view">
            <field name="name">hospital.location.form</field>
            <field name="model">hospital.location</field>
            <field name="arch" type="xml">
                <form string="Location">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="parent_id"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>