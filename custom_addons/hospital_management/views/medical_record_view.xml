<odoo>
    <!-- Action -->
    <record id="hospital_management.medical_record_action" model="ir.actions.act_window">
        <field name="name">Medical Records</field>
        <field name="res_model">hospital.medical_record</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View -->
    <record id="hospital_management.view_medical_record_tree" model="ir.ui.view">
        <field name="name">hospital.medical_record.tree</field>
        <field name="model">hospital.medical_record</field>
        <field name="arch" type="xml">
            <tree string="Medical Records">
                <field name="visit_date"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="diagnosis"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="hospital_management.view_medical_record_form" model="ir.ui.view">
        <field name="name">hospital.medical_record.form</field>
        <field name="model">hospital.medical_record</field>
        <field name="arch" type="xml">
            <form string="Medical Record">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="visit_date"/>
                        <field name="visit_type"/>
                        <field name="diagnosis"/>
                        <field name="treatment"/>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page string="Prescriptions">
                            <field name="prescription_ids">
                                <tree editable="bottom">
                                    <field name="drug_id"/>
                                    <field name="dosage"/>
                                    <field name="frequency"/>
                                    <field name="duration"/>
                                    <field name="quantity"/>
                                    <field name="instructions"/>
                                    <field name="dispensed"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Diagnoses">
                            <field name="diagnosis_ids">
                                <tree editable="bottom">
                                    <field name="icd_code"/>
                                    <field name="diagnosis_name"/>
                                    <field name="certainty"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Observations">
                            <field name="observation_ids">
                                <tree editable="bottom">
                                    <field name="observation_date"/>
                                    <field name="concept"/>
                                    <field name="value"/>
                                    <field name="unit"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Lab Tests">
                            <field name="lab_test_ids">
                                <tree editable="bottom">
                                    <field name="test_name"/>
                                    <field name="test_date"/>
                                    <field name="result"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Radiology Tests">
                            <field name="radiology_test_ids">
                                <tree editable="bottom">
                                    <field name="test_name"/>
                                    <field name="test_date"/>
                                    <field name="result"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Procedures">
                            <field name="procedure_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="procedure_date"/>
                                    <field name="status"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>